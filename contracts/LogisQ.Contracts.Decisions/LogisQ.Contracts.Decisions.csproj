<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Metadata -->
    <PackageId>LogisQ.Contracts.Decisions</PackageId>
    <Version>1.0.0</Version>
    <Authors>XyronQ Code Generator</Authors>
    <Company>LogisQ</Company>
    <Description>Auto-generated decision contracts from XyronQ policy metadata. Contains typed interfaces, sealed records, filter shapes, and parameter schemas for: EmptyHU.Selection, Failure.Resolution, Relocation, Storage.Slotting. DO NOT EDIT — regenerate from XyronQ.</Description>
    <Copyright>Copyright © 2026 LogisQ</Copyright>
    <PackageTags>LogisQ;WES;Decisions;Contracts;CodeGen;XyronQ</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Build Configuration -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../LogisQ.Contracts.Core/LogisQ.Contracts.Core.csproj" />
  </ItemGroup>

</Project>
